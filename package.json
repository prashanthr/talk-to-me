{
  "name": "talk-to-me",
  "version": "1.13.0",
  "description": "Chat using Web RTC",
  "main": "index.js",
  "private": true,
  "devDependencies": {
    "react-scripts": "1.1.4"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "axios": "^0.16.0",
    "basic-auth": "^2.0.0",
    "body-parser": "^1.17.1",
    "config": "^1.25.1",
    "cors": "^2.8.3",
    "cuid": "^1.3.8",
    "debug": "^2.6.3",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.2.1",
    "jwt-decode": "^2.2.0",
    "peer": "^0.2.8",
    "peerjs": "^0.3.14",
    "prop-types": "^15.6.0",
    "query-string": "^5.0.1",
    "raven-js": "^3.25.1",
    "react": "^16.2.0",
    "react-bootstrap": "^0.32.1",
    "react-burger-menu": "^2.5.4",
    "react-chat-window": "^1.1.1",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "next",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "simple-peer": "^8.1.1",
    "slug": "^0.9.1",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "standard-version": "^4.0.0",
    "styled-components": "^3.2.6",
    "wrtc": "^0.0.65"
  },
  "proxy": "http://localhost:9095",
  "scripts": {
    "start": "PORT=5000 react-scripts start",
    "start-server": "bin/server.sh",
    "start-server-dev": "pm2 startOrRestart ecosystem.json --only talk --env development",
    "start-server-prod": "pm2 startOrRestart ecosystem.json --only talk --env production",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "release": "standard-version",
    "update-config": "./bin/update-config.sh",
    "takeoff": "echo 'Taking off...' && yarn build-prod && yarn ship-prod && yarn copy-config-prod",
    "build-prod": "cp ./config/secrets/config/index.js ./src/client/config/ && yarn && APP_ENV=production bin/build-client.sh && git checkout .",
    "ship-prod": "yarn ship-prod-client && yarn ship-prod-server",
    "ship-prod-client": "scp  -i ~/.ssh/do -r build/*  root@45.55.194.231:/var/www/current/build/",
    "ship-prod-server": "pm2 deploy ecosystem.json production",
    "copy-config-prod": "scp -i ~/.ssh/do ./config/secrets/invite-codes.json root@45.55.194.231:/var/www/current/config/secrets/ && scp -i ~/.ssh/do ./config/secrets/config/default.json root@45.55.194.231:/var/www/current/config/",
    "update-config-prod": "ssh -i ~/.ssh/do root@45.55.194.231 \"cd /var/www/current; bash; yarn update-config\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prashanthr/talk-to-me.git"
  },
  "author": "Prashanth Rajaram",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/prashanthr/talk-to-me/issues"
  }
}
